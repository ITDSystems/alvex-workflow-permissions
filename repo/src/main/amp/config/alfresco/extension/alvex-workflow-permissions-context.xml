<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>

	<!-- Bootstrap configs -->
	<bean id="alvex-workflow-permissions-templates-bootstrap" 
				class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
		<!-- Module properties -->
		<property name="moduleId" value="workflow-permissions" />
		<property name="name" value="Alvex workflow permissions templates" />
		<property name="description" value="Alvex workflow permissions templates - used for setting default available workflows" />
		<property name="sinceVersion" value="1.3" />
		<property name="appliesFromVersion" value="1.3" />
		<!-- Data properties -->
		<property name="importer" ref="spacesBootstrap"/>
		<property name="bootstrapViews">
			<list>
				<props>
					<prop key="path">/${spaces.company_home.childname}/${spaces.dictionary.childname}</prop>
					<prop key="location">alfresco/bootstrap/alvex-workflow-permissions.xml</prop>
				</props>
			</list>
		</property>
	</bean>

	<bean id="alvex-workflow-permissions" parent="alvex-extension"
		class="com.alvexcore.repo.WorkflowPermissionsExtension"
		depends-on="" />
</beans>
